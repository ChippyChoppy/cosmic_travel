

<%= form_for @scientist do |f| %>
    <% if flash[:scientist_errors] %>
        <% flash[:scientist_errors].each do |error| %>
            <%= error %>
        <% end %>
    <% end %>

    <p><%= f.label :name %>
    <%= f.text_field :name %></p>
    <p><%= f.label :field_of_study %>
    <%= f.text_field :field_of_study %></p>

    <%= f.submit "3, 2, 1... Blastoff!"%>
<% end %>
